{
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",

  // Make Tailwind syntax the default for .css so directives are understood
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Nice-to-haves for shadcn/tailwind DX
  "editor.quickSuggestions": { "strings": true },
  "tailwindCSS.experimental.classRegex": [
    "cn\\(([^)]*)\\)",
    "cva\\(([^)]*)\\)"
  ],

  // Suppress false positive CSS conflicts in UI components using CSS custom properties
  "tailwindCSS.lint.cssConflict": "ignore"
}
