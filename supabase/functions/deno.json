{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "lib": ["deno.window", "deno.unstable"],
    "types": ["https://deno.land/x/types/index.d.ts"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.168.0/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
